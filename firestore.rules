rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: is admin (txger. or roles)
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username == 'txger.'
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'mod', 'dev', 'helper']
        );
    }

    // --- USERS ---
    // Sem Cloud Functions: o jogador pode atualizar os próprios points/wins/losses quando uma partida termina
    // (apenas alterações plausíveis: +0 ou +1 em wins e em losses por escrita).
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;

      // Perfil: avatar, username, etc. (sem points/wins/losses)
      allow update: if request.auth != null && request.auth.uid == userId
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'avatarUrl', 'bannerUrl', 'username', 'riotId', 'riotTag',
          'active_quests', 'lastDailyQuestGeneration', 'lastMonthlyQuestGeneration',
          'friend_requests', 'friends', 'lastSeenAt'
        ]);

      // Atualização dos próprios pontos após fim de partida (sem Cloud Functions):
      // só pode alterar points, lastPointsChange, wins, losses, winstreak; wins/losses no máximo +1 por escrita
      allow update: if request.auth != null && request.auth.uid == userId
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'points', 'lastPointsChange', 'wins', 'losses', 'winstreak'
        ])
        && request.resource.data.wins >= resource.data.get('wins', 0)
        && request.resource.data.wins <= resource.data.get('wins', 0) + 1
        && request.resource.data.losses >= resource.data.get('losses', 0)
        && request.resource.data.losses <= resource.data.get('losses', 0) + 1;

      // Allow updating friend lists / friend_requests by any authenticated user (keeps original behaviour)
      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friend_requests', 'friends']);

      // Admin dashboard: role / verified
      allow update: if request.auth != null && isAdmin()
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['role', 'verified']);

      allow delete: if false;
    }

    // --- QUEUE ---
    match /queue_entries/{entryId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && (request.auth.uid == entryId || isAdmin());
      allow update: if false;
    }

    // --- ACTIVE MATCHES ---
    match /active_matches/{matchId} {
      allow read: if true;

      allow create: if request.auth != null && request.resource.data.players is list
        && request.resource.data.players.size() > 0
        && request.resource.data.players.hasAny([request.auth.uid]);

      // Atualizações:
      // - Admin pode sempre atualizar
      // - Capitães podem atualizar apenas o campo matchCode (código da partida)
      // - Outros participantes podem atualizar a match DESDE QUE não toquem em matchCode
      allow update: if request.auth != null && (
        isAdmin()
        || (
          // Apenas capitães podem mudar o código da partida
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['matchCode'])
          && (request.auth.uid == resource.data.captainA || request.auth.uid == resource.data.captainB)
        )
        || (
          // Atualizações normais (sem tocar em matchCode) permitidas a participantes
          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['matchCode'])
          && (
            (resource.data.players is list && resource.data.players.hasAny([request.auth.uid]))
            || (request.resource.data.players is list && request.resource.data.players.hasAny([request.auth.uid]))
          )
        )
      );

      allow delete: if isAdmin();
    }

    // --- MATCH HISTORY (immutable) ---
    match /matches/{matchId} {
      allow read: if true;
      allow create: if request.auth != null
        && request.resource.data.id is string
        && request.resource.data.teamAIds is list
        && request.resource.data.teamBIds is list
        && (request.resource.data.playerPointsChanges == null || request.resource.data.playerPointsChanges is list);

      allow update, delete: if false;
    }

    // --- TICKETS ---
    match /tickets/{ticketId} {
      allow read: if request.auth != null && isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}
